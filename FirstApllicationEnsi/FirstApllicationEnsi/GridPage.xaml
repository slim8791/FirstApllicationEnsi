<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            
             x:Class="FirstApllicationEnsi.GridPage">
    <ContentPage.Content>
       <Grid RowSpacing="40" BackgroundColor="Yellow" ColumnSpacing="40" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
           <Grid.RowDefinitions>
               <RowDefinition Height="*"></RowDefinition>
                <RowDefinition  Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Text="Column 0 line 0" Grid.Column="0" Grid.Row="0" BackgroundColor="Blue"></Label>
           
            <Label Text="Column 1 line 0" Grid.Column="1" Grid.Row="0" BackgroundColor="Chartreuse"></Label>
            <Label Text="Column 1 line 1"  BackgroundColor="Aqua" Grid.Column="1" Grid.Row="1"></Label>
            <Label Text="Column 0 line 1" Grid.Column="0" Grid.Row="1" BackgroundColor="Silver"  Grid.ColumnSpan="2" ></Label>
           
         
        </Grid>
        
    </ContentPage.Content>
</ContentPage>