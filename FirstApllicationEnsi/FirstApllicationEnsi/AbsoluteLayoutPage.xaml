<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Absolute Page"
             x:Class="FirstApllicationEnsi.AbsoluteLayoutPage">
    <ContentPage.Content>
      
        <AbsoluteLayout>
            <BoxView Color="Aqua"
                     AbsoluteLayout.LayoutBounds="0,0,1,1"
                     AbsoluteLayout.LayoutFlags="All"></BoxView>
            
            <BoxView Color="White"
                      AbsoluteLayout.LayoutBounds="0.5,0.1,100,100"
                     AbsoluteLayout.LayoutFlags="PositionProportional"></BoxView>
            
            <Button BackgroundColor="Azure"
                    TextColor="Black"
                    AbsoluteLayout.LayoutBounds="0,1,1,50"
                    AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional"
                    >
                <Button.Text>Connect</Button.Text>
            </Button>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>